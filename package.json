{
  "name": "maginet-deploy",
  "version": "1.0.0",
  "description": "Electron application to deploy Maginet on Steam",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-windows": "npx electron-packager src --ignore=\"^/maginet$\" --ignore=\"^/node_modules$\" --overwrite --out=\"maginet-windows\" --platform=win32 --arch=x64 --icon=\"src/static/png/appicon.ico\"",
    "build-windows-demo": "npx electron-packager src --ignore=\"^/maginet$\" --ignore=\"^/node_modules$\" --overwrite --out=\"maginet-windows-demo\" --platform=win32 --arch=x64 --icon=\"src/static/png/appicon.ico\"",
    "build-mac": "npx electron-packager src --ignore=\"^/maginet$\" --ignore=\"^/node_modules$\" --overwrite --out=\"maginet-mac\" --platform=darwin --arch=x64 --icon=\"src/static/png/appicon.png\"",
    "build-mac-demo": "npx electron-packager src --ignore=\"^/maginet$\" --ignore=\"^/node_modules$\" --overwrite --out=\"maginet-mac-demo\" --platform=darwin --arch=x64 --icon=\"src/static/png/appicon.png\""
  },
  "repository": "https://github.com/evrimoztamur/maginet-deploy",
  "author": "evrim.zone",
  "devDependencies": {
    "electron": "^25.3.1",
    "electron-packager": "^17.1.1"
  }
}